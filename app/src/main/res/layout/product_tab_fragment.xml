<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<!--suppress CheckTagEmptyBody, CheckTagEmptyBody -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductTab"
    android:orientation="vertical">

    <HorizontalScrollView
        android:id="@+id/gallery_slider"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_gravity="center_vertical"
        android:background="@android:color/white"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/id_gallery"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal" >
        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/product_tab_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:paddingHorizontal="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="#000000"
        android:textAllCaps="true"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/product_tab_price_text"
            android:layout_width="wrap_content"
            android:text="$200.00"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/product_tab_ship_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="With Free Shipping"
            android:gravity="center_vertical"
            android:paddingLeft="4dp"/>


    </LinearLayout>

    <TableRow
        android:id="@+id/hr1"
        android:layout_width="385dp"
        android:layout_height="1dp"
        android:background="#eeeeee"
        android:layout_marginTop="15dp"
        android:layout_gravity="end"></TableRow>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/information"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Highlights"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/subtitle_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subtitle"
            android:layout_marginLeft="48dp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/product_tab_subtitle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Example"
            android:paddingRight="15dp"
            android:layout_marginLeft="40dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:layout_marginLeft="48dp"
            android:textStyle=""
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/product_tab_price_text_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Example"
            android:layout_marginLeft="56dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/brand_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brand"
            android:layout_marginLeft="48dp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/product_tab_brand_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Example"
            android:layout_marginLeft="51dp"/>
    </LinearLayout>

    <TableRow
        android:id="@+id/hr2"
        android:layout_width="385dp"
        android:layout_height="1dp"
        android:background="#eeeeee"
        android:layout_marginTop="15dp"
        android:layout_gravity="end"></TableRow>

    <LinearLayout
        android:id="@+id/spec_layout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/wrench"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Specifications"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="18sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/spec_bullets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="test"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="15dp" />


</LinearLayout>
</ScrollView>